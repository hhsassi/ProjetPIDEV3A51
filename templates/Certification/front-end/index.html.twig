{% extends '/home_page/index.html.twig' %}

{% block content %}
<div>
<div class="container mt-5">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <h1 class="mb-4">Index des Certifications</h1>

    {% if certifications is empty %}
        <div class="alert alert-info" role="alert">
            Aucune certification trouvée.
        </div>
    {% else %}
        <div class="row">
            {% for certification in certifications %}
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('uploads/certifications/' ~ certification.badgeCertif) }}" class="card-img-top" alt="Badge de Certification" style="width: 100%; height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ certification.nomCertif }}</h5>
                            <p class="card-text">{{ certification.descriotionCertif }}</p>
                            <ul class="list-group list-group-flush mt-auto">
                                <li class="list-group-item">Durée: {{ certification.dureeCertif }} jours</li>
                                <li class="list-group-item">Niveau: {{ certification.niveauCertif }}</li>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('show_front_certification', {'id': certification.id}) }}" class="btn btn-info">Voir</a>
                            <!--
                            <a href="{{ path('edit_certification', {'id': certification.id}) }}" class="btn btn-primary">Modifier</a>
                            <form action="{{ path('delete_certification', {'id': certification.id}) }}" method="post" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ certification.id) }}">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                            -->
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
</div>
{% endblock %}